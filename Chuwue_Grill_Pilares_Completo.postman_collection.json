    {
      "name": "üì° WEBHOOKS BIDIRECCIONALES B2B",
      "item": [
        {
          "name": "FindYourWork ‚Üí Chuwue (Servicio Contratado)",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "// Generar firma HMAC-SHA256",
                  "const crypto = require('crypto');",
                  "const secret = 'your_shared_secret_here';",
                  "const timestamp = Math.floor(Date.now() / 1000);",
                  "const payload = JSON.stringify({",
                  "    event_type: 'service.booked_for_event',",
                  "    timestamp: timestamp,",
                  "    data: {",
                  "        service_id: 'SRV-' + Math.floor(Math.random() * 90000) + 10000,",
                  "        event_id: 'EVT-' + Math.floor(Math.random() * 90000) + 10000,",
                  "        provider: 'FindYourWork',",
                  "        status: 'booked'",
                  "    }",
                  "});",
                  "const signature = crypto.createHmac('sha256', secret).update(payload).digest('hex');",
                  "pm.environment.set('webhook_signature', signature);",
                  "pm.environment.set('webhook_payload', payload);"
                ]
              }
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('‚úÖ Webhook B2B procesado (Status 200)', function () {",
                  "    pm.expect(pm.response.code).to.equal(200);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "X-Webhook-Signature",
                "value": "sha256={{webhook_signature}}"
              },
              {
                "key": "X-Webhook-Timestamp",
                "value": "{{$timestamp}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"event_type\": \"service.booked_for_event\",\n  \"timestamp\": \"{{$timestamp}}\",\n  \"data\": {\n    \"service_id\": \"SRV-{{$randomInt(10000, 99999)}}\",\n    \"event_id\": \"EVT-{{$randomInt(10000, 99999)}}\",\n    \"provider\": \"FindYourWork\",\n    \"service_type\": \"fotografia\",\n    \"booking_status\": \"confirmed\",\n    \"cost\": 50000\n  }\n}"
            },
            "url": {
              "raw": "http://localhost:8002/webhooks/partner/callback",
              "protocol": "http",
              "host": ["localhost"],
